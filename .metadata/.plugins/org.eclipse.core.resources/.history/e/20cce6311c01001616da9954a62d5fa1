package com.test.stringTest;

import java.util.Scanner;

public class Test2 {
	
	public static void main(String[] args) {
		
	    String s="  asdasdasds asdasd asdas das d  ";
	    //int x=s.length();
	    System.out.println("字符串的长度是:"+s.length());
		
	    String s1="abc";
	    char c=s1.charAt(1);
	    System.out.println("c:"+c);
	    
	    //indexOf  方法
	    Scanner input=new Scanner(System.in);
	    System.out.println("请输入字符串1:");
	    String s2=input.nextLine();
	    System.out.println("请输入字符串2:");
	    String s3=input.nextLine();
	    
	    if(s2.indexOf(s3)==-1){
	    	System.out.println("字符串1中不包含字符串2");
	    }else{
	    	System.out.println("字符串1中包含字符串2");
	    	System.out.println("位置是:"+s2.indexOf(s3));
	    }
	    
	}

}
