<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>MyShop</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index</welcome-file>
  </welcome-file-list>
  <filter>
    <display-name>EncodingFilter</display-name>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.test.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>SessionCheck</display-name>
    <filter-name>SessionCheck</filter-name>
    <filter-class>com.test.filter.SessionCheck</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionCheck</filter-name>
    <url-pattern>/cart/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.test.listener.ShopListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>IndexServlet</display-name>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>com.test.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.test.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>addCart</display-name>
    <servlet-name>addCart</servlet-name>
    <servlet-class>com.test.servlet.addCart</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addCart</servlet-name>
    <url-pattern>/cart/addCart</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ShowCart</display-name>
    <servlet-name>ShowCart</servlet-name>
    <servlet-class>com.test.servlet.ShowCart</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowCart</servlet-name>
    <url-pattern>/cart/showCart</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DelCart</display-name>
    <servlet-name>DelCart</servlet-name>
    <servlet-class>com.test.servlet.DelCart</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DelCart</servlet-name>
    <url-pattern>/cart/delCart</url-pattern>
  </servlet-mapping>
</web-app>